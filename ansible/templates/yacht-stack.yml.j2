volumes:
  yacht_config:
    driver: local
    name: yacht_config
networks:
  neon_neon-core:
    external: true

services:
  yacht:
    image: selfhostedpro/yacht
    restart: unless-stopped
    container_name: yacht
    networks:
      neon_neon-core:
        aliases:
          - yacht
    ports:
      - 8000:8000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - yacht_config:/config
